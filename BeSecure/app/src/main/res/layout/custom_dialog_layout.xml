<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6D3D3"
        android:orientation="vertical"
        android:padding="10dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="#00969393"
            app:cardBackgroundColor="#F3F5F5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:text=" Edit Profile"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="#B3B0B0"
            app:cardBackgroundColor="@color/color_screen_background_white"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/color_black"
                    android:textStyle="bold" />

                <View
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BBB7B7" />


                <EditText
                    android:id="@+id/nameET"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:hint="Name" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="#B3B0B0"
            app:cardBackgroundColor="@color/color_screen_background_white"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:text="Contact"
                    android:textStyle="bold" />
                <View
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BBB7B7" />


                <EditText
                    android:id="@+id/contactET"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:hint="03004626618" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="#B3B0B0"
            app:cardBackgroundColor="@color/color_screen_background_white"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="@string/email"
                    android:textColor="@color/color_black"
                    android:textStyle="bold" />
                <View
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BBB7B7" />



                <EditText
                    android:id="@+id/emailET"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:hint="example@gmail.com" />
            </LinearLayout>
        </android.support.v7.widget.CardView>




        <Button
            android:id="@+id/updateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update" />
    </LinearLayout>
</android.support.v7.widget.CardView>